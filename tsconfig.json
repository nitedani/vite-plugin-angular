{
  "compilerOptions": {
    "outDir": "lib/esm",
    "module": "esnext",
    "target": "ESNext",
    "lib": [
      "ESNext"
    ],
    "declaration": true,
    "moduleResolution": "node",
    // "noUnusedLocals": true,
    // "noUnusedParameters": true,
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "lib",
    "examples"
  ]
}