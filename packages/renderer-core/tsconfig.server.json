{
  "extends": "./tsconfig.json",
  "include": [
    "./src/server",
    "./src/shared",
    "./src/index.ts"
  ],
  "compilerOptions": {
    "outDir": "lib",
    "module": "esnext",
    "target": "ESNext",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "declaration": true,
    "moduleResolution": "node",
    "noImplicitThis": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "types": [
      "node",
      "vite/client"
    ]
  }
}